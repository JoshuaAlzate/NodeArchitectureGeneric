{
   "compilerOptions": {
      "baseUrl": "src/",
      "lib": [
         "es5",
         "es6",
         "dom", "es2017"
      ],
      "paths": {
         "@types/*": ["types/*"]
      },
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "declaration": true
   }
}